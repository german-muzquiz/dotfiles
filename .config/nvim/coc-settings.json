{
  "languageserver": {
      "golang": {
        "command": "gopls",
        "rootPatterns": ["go.mod"],
        "filetypes": ["go"]
      },
      "terraform": {
        "command": "terraform-ls",
        "args": [
            "serve"
        ],
        "filetypes": [
            "terraform",
            "tf"
        ],
        "initializationOptions": {},
        "settings": {}
      }
  },

  "yaml.schemas": {
      "https://raw.githubusercontent.com/yannh/kubernetes-json-schema/master/v1.22.4-standalone-strict/all.json": [
          "/*.yml",
          "/*.yaml"
      ]
  }

}
